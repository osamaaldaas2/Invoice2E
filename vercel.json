{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "buildCommand": "npm run build",
    "installCommand": "npm ci",
    "framework": "nextjs",
    "regions": [
        "fra1"
    ],
    "functions": {
        "app/api/**/*.ts": {
            "maxDuration": 30,
            "memory": 1024
        },
        "app/api/invoices/extract/route.ts": {
            "maxDuration": 60,
            "memory": 1024
        },
        "app/api/invoices/bulk-upload/route.ts": {
            "maxDuration": 60,
            "memory": 1024
        },
        "app/api/internal/batch-worker/route.ts": {
            "maxDuration": 120,
            "memory": 1024
        }
    },
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-DNS-Prefetch-Control",
                    "value": "on"
                },
                {
                    "key": "Strict-Transport-Security",
                    "value": "max-age=63072000; includeSubDomains; preload"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        }
    ],
    "redirects": [
        {
            "source": "/docs",
            "destination": "/api-docs",
            "permanent": false
        }
    ]
}