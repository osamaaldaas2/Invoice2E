# Invoice2E — Environment Variables
# Copy to .env.local and fill in values

# Supabase
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=

# App
NEXT_PUBLIC_APP_URL=https://www.invoice2e.eu
SESSION_SECRET=
NODE_ENV=development

# AI Providers
AI_PROVIDER=openai
OPENAI_API_KEY=
GEMINI_API_KEY=
GEMINI_MODEL=
GEMINI_BOUNDARY_MODEL=
MISTRAL_API_KEY=
MISTRAL_API_URL=
MISTRAL_OCR_MODEL=

# Payments
STRIPE_SECRET_KEY=
PAYPAL_CLIENT_ID=

# Email
BREVO_API_KEY=

# Rate Limiting (optional — falls back to in-memory)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Background Jobs
BATCH_WORKER_SECRET=
BULLMQ_REDIS_URL=

# Cron
CRON_SECRET=

# Validation (optional)
ENABLE_EXTERNAL_VALIDATION=false
KOSIT_VALIDATOR_JAR=
KOSIT_SCENARIOS_XML=

# Monitoring
LOG_LEVEL=info
METRICS_AUTH_TOKEN=

# Security
CORS_ALLOWED_ORIGINS=
TRUSTED_PROXY=

# Feature Flags
ENABLE_MULTI_FORMAT=true
