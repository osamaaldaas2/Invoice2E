{
  "name": "invoice2e",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "db:migrate": "npx tsx scripts/run-migrations.ts",
    "db:migrate:status": "npx tsx scripts/run-migrations.ts --status",
    "db:migrate:dry-run": "npx tsx scripts/run-migrations.ts --dry-run",
    "test": "vitest",
    "test:integration": "vitest --config tests/integration/vitest.config.integration.ts",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepare": "husky",
    "lint:deps": "npx depcruise --config .dependency-cruiser.cjs app services lib components types hooks adapters domains",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui"
  },
  "dependencies": {
    "@casl/ability": "^6.7.2",
    "@google/generative-ai": "^0.24.1",
    "@hookform/resolvers": "^3.3.0",
    "@sentry/nextjs": "^10.38.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.38.0",
    "@tanstack/react-query": "^5.20.0",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.2",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "awilix": "^12.0.1",
    "axios": "^1.6.0",
    "bcrypt": "6.0.0",
    "bullmq": "^5.34.0",
    "clsx": "^2.0.0",
    "dompurify": "^3.3.1",
    "ioredis": "^5.6.0",
    "jose": "6.1.3",
    "jszip": "^3.10.1",
    "lucide-react": "^0.263.0",
    "next": "^16.1.6",
    "next-intl": "^4.8.2",
    "pdf-lib": "^1.17.1",
    "prom-client": "^15.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "tailwind-merge": "^2.2.0",
    "tesseract.js": "^7.0.0",
    "unpdf": "^1.4.0",
    "xstate": "^5.19.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/typography": "^0.5.19",
    "@testcontainers/postgresql": "^10.18.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@types/bcrypt": "^6.0.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.10.0",
    "@types/pdf-parse": "^1.1.5",
    "@types/pg": "^8.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitest/coverage-v8": "~3.2.4",
    "@vitest/ui": "~3.2.4",
    "autoprefixer": "^10.4.0",
    "dependency-cruiser": "^16.0.0",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.6",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "pg": "^8.13.0",
    "postcss": "^8.4.0",
    "prettier": "^3.1.0",
    "supabase": "^2.75.5",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.3.0",
    "vitest": "~3.2.4"
  }
}
